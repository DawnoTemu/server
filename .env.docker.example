# Core Flask settings
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=dev-secret-change-me
HOST=0.0.0.0
PORT=8000
# Optional admin session hard timeout (seconds)
SESSION_TIMEOUT=86400

# Database & Redis
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/dawnotemu
REDIS_URL=redis://redis:6379/0

# Admin access (either password or precomputed hash)
ADMIN_PASSWORD=change-me
ADMIN_PASSWORD_HASH=
ADMIN_API_KEYS=

# Email & integrations (replace with valid credentials as needed)
RESEND_API_KEY=replace-me
RESEND_FROM_EMAIL=no-reply@example.com
CARTESIA_API_KEY=replace-me
ELEVENLABS_API_KEY=replace-me
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local
AWS_REGION=eu-west-1
S3_BUCKET_NAME=local-dawnotemu
AWS_S3_ENDPOINT_URL=http://minio:9000
AWS_S3_USE_SSL=false
AWS_S3_ADDRESSING_STYLE=path
AWS_S3_USE_SSE=false
AWS_MAX_POOL_CONNECTIONS=10
AWS_MAX_RETRIES=3
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123
MINIO_PUBLIC_ENDPOINT=http://localhost:9000
# Optional: TTL (seconds) for synth concurrency slots
ELEVENLABS_SYNTH_TTL=180

# Voice service defaults
PREFERRED_VOICE_SERVICE=cartesia
ELEVENLABS_SLOT_LIMIT=30
# Concurrent synthesis API calls (separate limit from slot count)
ELEVENLABS_SYNTHESIS_CONCURRENCY=5
VOICE_WARM_HOLD_SECONDS=900
VOICE_QUEUE_POLL_INTERVAL=60
# Proactive cleanup: evict voices idle longer than this even when queue is empty (0 = disabled)
VOICE_MAX_IDLE_HOURS=24

# Credits
CREDITS_UNIT_LABEL=Story Points (Punkty Magii)
CREDITS_UNIT_SIZE=1000
INITIAL_CREDITS=10
CREDIT_SOURCES_PRIORITY=event,monthly,referral,add_on,free
MONTHLY_CREDITS_DEFAULT=0

# Optional logging/monitoring
SENTRY_DSN=

# URLs for templates/emails
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
